<div class="attribute resource_type_attribute" id="resource_type_attribute_<%= attribute.id %>">
  <%
     prefix = "type_attributes"
     prefix = "new_#{ prefix }" if attribute.new_record?
     prefix = "resource_type[#{ prefix }]"
   -%>

  <%= fields_for(prefix, attribute) do |f| %>
    <%= f.hidden_field(:position, :index => attribute.id, :class => "position") %>

    <div class="control-group">
      <label><%=_ "Name" %></label>
      <div class="controls">
        <%= f.text_field :name, :index => attribute.id %>
        <%= sortable_handle_tag(attribute) %>
        <%= link_to_function(_("Remove attribute"), "jQuery(this).parents('.attribute').remove()") %>
      </div>
    </div>

    <div class="control-group">
      <label><%=_ "Mandatory" %></label>
      <div class="controls">
        <%= f.check_box :is_mandatory, :index => attribute.id, :class => "nested-checkbox" %>
      </div>
    </div>

    <div class="control-group">
      <label><%=_ "This attribute is a password" %></label>
      <div class="controls">
        <%= f.check_box :is_password, :index => attribute.id, :class => "nested-checkbox" %>
      </div>
    </div>

    <div class="control-group">
      <label><%=_ "Allows multiple" %></label>
      <div class="controls">
        <%= f.check_box :allows_multiple, :index => attribute.id, :class => "nested-checkbox" %>
      </div>
    </div>

    <div class="control-group">
      <label><%=_ "Validation Regex" %></label>
      <div class="controls">
        <%= f.text_field :validation_regex, :index => attribute.id %>
      </div>
    </div>

    <div class="control-group">
      <label><%=_ "Default field length " %></label>
      <div class="controls">
        <%= f.text_field :default_field_length, :index => attribute.id %>
      </div>
    </div>

  <% end %>
</div>

